{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/book.css"/>
{% endblock %}

{% block content %}

	<div class="rectangle"></div>

	<h1>Livre d'or</h1>
	<div class="container">
		<h2>Laissez votre avis !</h2>

		<ul>
			{% for error in errors %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>

		<form method="post">
			<div>
				<label for="firstname">Prenom</label>
				<input type="text" name="first_name" id="first_name" required>
			</div>
			<div>
				<label for="lastname">Nom</label>
				<input type="text" name="last_name" id="last_name" required><br>
			</div>
			<div>
				<label for="message">Message</label>
				<textarea id="message" name="message" rows="2"></textarea><br>
			</div>
			<div class="rate">
				<input type="radio" id="star5" name="rate" value="5"/>
				<label for="star5" title="text"></label>
				<input type="radio" id="star4" name="rate" value="4"/>
				<label for="star4" title="text"></label>
				<input type="radio" id="star3" name="rate" value="3"/>
				<label for="star3" title="text"></label>
				<input type="radio" id="star2" name="rate" value="2"/>
				<label for="star2" title="text"></label>
				<input type="radio" id="star1" name="rate" value="1"/>
				<label for="star1" title="text"></label>
			</div>
			<button type="submit">Envoyer</button>
		</form>
	</div>
</div>


<section class="carousel" aria-label="Gallery">
	<ol class="carousel__viewport">
		{% for testimony in testimonies %}
			<li id="carousel__slide{{ testimony.id }}" tabindex="0" class="carousel__slide">
				<div class="carousel_container-comment">
					<h2 class="testimony_title">Nos avis !</h2>
					<p>{{ testimony.first_name }}</p>
					<p>{{ testimony.last_name }}</p>
					<p class="carousel_testimony">"{{ testimony.message }}"</p>
					<div class="rate_testimony">
						<input type="radio" id="star5" name="rate_testimony" value="5"/>
						<label for="star5" title="text"></label>
						<input type="radio" id="star4" name="rate_testimony" value="4"/>
						<label for="star4" title="text"></label>
						<input type="radio" id="star3" name="rate_testimony" value="3"/>
						<label for="star3" title="text"></label>
						<input type="radio" id="star2" name="rate_testimony" value="2"/>
						<label for="star2" title="text"></label>
						<input type="radio" id="star1" name="rate_testimony" value="1"/>
						<label for="star1" title="text"></label>
					</div>
				</div>


				<div class="carousel__snapper">
					<a href="#carousel__slide{{ testimony.id - 1 }}" class="carousel__prev">Go to last slide</a>
					<a href="#carousel__slide{{ testimony.id + 1 }}" class="carousel__next">Go to next slide</a>
				</div>
			</li>
		{% endfor %}
	</ol>

	<aside class="carousel__navigation">
		<ol class="carousel__navigation-list">
			{% for testimony in testimonies %}
				<li class="carousel__navigation-item">
					<a href="#carousel__slide{{ testimony.id }}" class="carousel__navigation-button">Go to slide
						{{ testimony.id }}</a>
				</li>
			{% endfor %}
		</ol>
	</aside>
</section>


